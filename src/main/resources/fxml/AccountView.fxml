<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.financetracker.controller.AccountController"
      spacing="20" styleClass="main-content">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header Section -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <VBox spacing="5">
            <Label text="Account Management" styleClass="page-title">
                <font><Font size="24" name="System Bold"/></font>
            </Label>
            <Label text="Manage your bank accounts and balances" styleClass="subtitle">
                <font><Font size="13"/></font>
            </Label>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="+ Add Account" onAction="#handleAddAccount" styleClass="primary-button" prefHeight="40">
            <font><Font size="14"/></font>
        </Button>
    </HBox>

    <!-- Account Table -->
    <VBox VBox.vgrow="ALWAYS" styleClass="content-section">
        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

        <TableView fx:id="accountTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nameColumn" text="Account Name" prefWidth="200"/>
                <TableColumn fx:id="typeColumn" text="Type" prefWidth="120"/>
                <TableColumn fx:id="balanceColumn" text="Balance" prefWidth="150"/>
                <TableColumn fx:id="currencyColumn" text="Currency" prefWidth="100"/>
                <TableColumn fx:id="institutionColumn" text="Institution" prefWidth="200"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
            </columns>
            <placeholder>
                <Label text="No accounts found. Click '+ Add Account' to add your first account."/>
            </placeholder>
        </TableView>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Edit Selected" onAction="#handleEditAccount" styleClass="secondary-button"/>
        <Button text="Toggle Active" onAction="#handleToggleActive" styleClass="secondary-button"/>
        <Button text="Delete Selected" onAction="#handleDeleteAccount" styleClass="danger-button"/>
    </HBox>
</VBox>
