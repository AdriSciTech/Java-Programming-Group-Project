<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.financetracker.controller.DashboardHomeController"
      spacing="20" alignment="TOP_CENTER" styleClass="main-content">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Welcome Header -->
    <VBox spacing="10" alignment="CENTER">
        <Label text="Welcome to Finance Tracker" styleClass="page-title">
            <font><Font size="28" name="System Bold"/></font>
        </Label>
        <Label text="Your personal finance management dashboard" styleClass="subtitle">
            <font><Font size="14"/></font>
        </Label>
    </VBox>

    <!-- Summary Cards Row -->
    <HBox spacing="20" alignment="CENTER">
        <padding><Insets top="20"/></padding>

        <!-- Total Balance Card -->
        <VBox spacing="10" styleClass="summary-card" prefWidth="200">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="Total Balance" styleClass="card-title">
                <font><Font size="12"/></font>
            </Label>
            <Label fx:id="totalBalanceLabel" text="$0.00" styleClass="card-value">
                <font><Font size="24" name="System Bold"/></font>
            </Label>
        </VBox>

        <!-- Monthly Income Card -->
        <VBox spacing="10" styleClass="summary-card" prefWidth="200">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="Monthly Income" styleClass="card-title">
                <font><Font size="12"/></font>
            </Label>
            <Label fx:id="monthlyIncomeLabel" text="$0.00" styleClass="income-value">
                <font><Font size="24" name="System Bold"/></font>
            </Label>
        </VBox>

        <!-- Monthly Expenses Card -->
        <VBox spacing="10" styleClass="summary-card" prefWidth="200">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="Monthly Expenses" styleClass="card-title">
                <font><Font size="12"/></font>
            </Label>
            <Label fx:id="monthlyExpenseLabel" text="$0.00" styleClass="expense-value">
                <font><Font size="24" name="System Bold"/></font>
            </Label>
        </VBox>

        <!-- Savings Card -->
        <VBox spacing="10" styleClass="summary-card" prefWidth="200">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="Monthly Savings" styleClass="card-title">
                <font><Font size="12"/></font>
            </Label>
            <Label fx:id="monthlySavingsLabel" text="$0.00" styleClass="card-value">
                <font><Font size="24" name="System Bold"/></font>
            </Label>
        </VBox>
    </HBox>

    <!-- Quick Actions Section -->
    <VBox spacing="15" alignment="CENTER">
        <padding><Insets top="30"/></padding>

        <Label text="Quick Actions" styleClass="section-title">
            <font><Font size="16" name="System Bold"/></font>
        </Label>

        <HBox spacing="15" alignment="CENTER">
            <Button text="+ Add Income" styleClass="primary-button" prefWidth="150" prefHeight="40"/>
            <Button text="+ Add Expense" styleClass="secondary-button" prefWidth="150" prefHeight="40"/>
            <Button text="+ Set Budget" styleClass="secondary-button" prefWidth="150" prefHeight="40"/>
            <Button text="View Reports" styleClass="secondary-button" prefWidth="150" prefHeight="40"/>
        </HBox>
    </VBox>

    <!-- Next Bill and Chart Section -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Next Bill Card -->
        <VBox spacing="10" styleClass="content-section" prefWidth="300">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="Next Upcoming Bill" styleClass="section-title">
                <font><Font size="16" name="System Bold"/></font>
            </Label>
            <Label fx:id="nextBillLabel" text="No upcoming bills" styleClass="card-value" wrapText="true">
                <font><Font size="14"/></font>
            </Label>
            <Label text="Add bills in the Bills section to track recurring payments" styleClass="placeholder-text" wrapText="true">
                <font><Font size="12"/></font>
            </Label>
        </VBox>

        <!-- Mini Pie Chart -->
        <VBox spacing="10" styleClass="content-section" HBox.hgrow="ALWAYS">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="Expenses by Category (This Month)" styleClass="section-title">
                <font><Font size="16" name="System Bold"/></font>
            </Label>
            <PieChart fx:id="expensePieChart" VBox.vgrow="ALWAYS" prefHeight="250"/>
        </VBox>
    </HBox>
</VBox>