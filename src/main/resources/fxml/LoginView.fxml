<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.financetracker.controller.LoginController"
      alignment="CENTER" spacing="20" styleClass="login-container">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Logo/Title Section -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="Finance Tracker" styleClass="app-title">
            <font>
                <Font name="System Bold" size="28"/>
            </font>
        </Label>
        <Label text="Manage Your Money Wisely" styleClass="app-subtitle">
            <font>
                <Font size="14"/>
            </font>
        </Label>
        <!-- Connection Status -->
        <Label fx:id="connectionStatusLabel" text="Checking connection..."
               styleClass="connection-status" wrapText="true">
            <font>
                <Font size="11"/>
            </font>
        </Label>
    </VBox>

    <!-- Login Form -->
    <VBox spacing="15" styleClass="login-form">
        <VBox.margin>
            <Insets top="20"/>
        </VBox.margin>

        <!-- Email Field -->
        <VBox spacing="5">
            <Label text="Email" styleClass="field-label">
                <font>
                    <Font name="System Bold" size="12"/>
                </font>
            </Label>
            <TextField fx:id="emailField" promptText="Enter your email"
                       styleClass="text-field" prefHeight="40"/>
        </VBox>

        <!-- Password Field -->
        <VBox spacing="5">
            <Label text="Password" styleClass="field-label">
                <font>
                    <Font name="System Bold" size="12"/>
                </font>
            </Label>
            <PasswordField fx:id="passwordField" promptText="Enter your password"
                           styleClass="text-field" prefHeight="40"/>
        </VBox>

        <!-- Error Label -->
        <Label fx:id="errorLabel" styleClass="error-label" wrapText="true">
            <font>
                <Font size="11"/>
            </font>
        </Label>

        <!-- Loading Indicator -->
        <ProgressIndicator fx:id="loadingIndicator" prefHeight="30" prefWidth="30"
                           visible="false" maxHeight="30" maxWidth="30">
            <VBox.margin>
                <Insets top="10"/>
            </VBox.margin>
        </ProgressIndicator>

        <!-- Login Button -->
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin"
                styleClass="primary-button" prefHeight="45" maxWidth="Infinity">
            <font>
                <Font name="System Bold" size="14"/>
            </font>
            <VBox.margin>
                <Insets top="10"/>
            </VBox.margin>
        </Button>

        <!-- Forgot Password -->
        <Label text="Forgot Password?" styleClass="link-label"
               onMouseClicked="#handleForgotPassword" textFill="#4A90E2">
            <font>
                <Font size="12"/>
            </font>
            <VBox.margin>
                <Insets top="5"/>
            </VBox.margin>
        </Label>
    </VBox>

    <!-- Signup Section -->
    <HBox alignment="CENTER" spacing="5">
        <VBox.margin>
            <Insets top="20"/>
        </VBox.margin>

        <Label text="Don't have an account?" styleClass="normal-text">
            <font>
                <Font size="12"/>
            </font>
        </Label>
        <Label fx:id="signupLabel" text="Sign Up" styleClass="link-label"
               onMouseClicked="#handleSignup" textFill="#4A90E2">
            <font>
                <Font name="System Bold" size="12"/>
            </font>
        </Label>
    </HBox>
</VBox>